{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block stylesheets %}

	{{ parent() }}

	<script async src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCnLyf_4BpAnkMJ6tFeO-dKDUstYO0rDso&libraries=places&callback=initMap"></script>
	{# <script async src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCnLyf_4BpAnkMJ6tFeO-dKDUstYO0rDso&libraries=places&callback=initMap"></script> #}

{% endblock %}


{% block body %}
	{% if is_granted("ROLE_ADMIN") %}
		{# href="{{ path('deleteUser', {id: user.id}) }}" #}
		<div class="text-center m-5">
			<button class="header__delete btn btn-danger justify-content-end" data-toggle="modal" data-target="#exampleModal">Supprimer ce compte</button>
		</div>

		<!-- Modal -->
		<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Suppression irréversible</h5>
						<button type="button" class="close btn btn-primary" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						Etes-vous bien sûr de vouloir effectuer cette action définitive ?
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-primary" data-dismiss="modal">Non</button>
						<a class="btn btn-danger" href="{{ path('deleteUser', {id: user.id}) }}">Supprimer</a>
					</div>
				</div>
			</div>
		</div>

	{% endif %}

	<div
		class="wrapper">
		{# <div>
													<input id="autocomplete" placeholder="Indiquer un pays" type="text"/>
												</div> #}
		<div id="mapProfile"></div>
		{# <div id="markers">
							{% for place in user.places %}
								<div class="marker">
				
									<p>{{ place.name }}</p>
									<p>{{ place.placeId }}</p>
									<p>{{ place.statut }}</p>
								</div>
							{% endfor %}
						</div> #}

		<div class="header">
			{% set count = 0 %}
			{% for article in user.publications %}
				{% if article.statut == 1 %}
					{% set count = count + 1 %}
				{% endif %}
			{% endfor %}
			<div class="header__leftColumn">
				<small>
					<a href="{{ path('indexArticles', {id: user.id}) }}" class="header__text">Tous les articles ({{count}})</a>
				</small>
				<small>
					<a href="{{ path('followers', {id: user.id}) }}" class="header__text">Abonnés ({{user.followers|length}})</a>
				</small>
				<small>
					<a href="{{ path('follows', {id: user.id}) }}" class="header__text">Abonnements ({{user.following|length}})</a>
				</small>
			</div>
			<div class="avatar">
				<figure class="header__user">
					<img src="{{ asset('img/avatar/' ~ user.avatar) }}" alt="#" class="user__picture">
				</figure>
				<h1 class="user__name">
					{{ user.pseudo }}
				</h1>
			</div>
			{% if app.user %}
				{% if user != app.user %}
					<div class="header__rightColumn">
						{% if user.followers.contains(app.user) %}
							<a class="header__text" href="{{ path('unfollowing', {id: user.id}) }}">Ne plus suivre ce membre</a>
						{% else %}
							<a class="header__text" href="{{ path('following', {id: user.id}) }}">suivre ce membre</a>
						{% endif %}
						<button class="header__sendMessage">envoyer un message à ce membre</button>
					</div>
				{% endif %}
			{% endif %}

		</div>
		<main class="main">
			<p class="main__description">
				{{ user.description }}</p>
			<div class="main__infos">
				<h3 class="infos__title">Infos :</h3>
				<ul class="infos__list">
					<li class="infos__line">
						<strong>date d'inscription :</strong>
						{{ user.dateCreation | date("m/d/Y") }}</li>
					<li class="infos__line">
						<strong>pays visités :
						</strong>
						{{ user.voyagesAccomplis }}</li>
					<li class="infos__line">
						<strong>envies de voyages :</strong>
						{{ user.projetsVoyages }}</li>
				</ul>
			</div>
			<div class="main__articles">
				{% if articlesPopulaires is defined %}
					<h3 class="articles__title">Articles les plus populaires :</h3>
					<div class="articles__flex">
						{% for article in articlesPopulaires %}
							{% if article.statut == 1 %}
								<a href="{{ path('article_show', {id: article.id}) }}" class="m-2">
									<figure class="article__picture">
										{% if article.galeries is not empty %}
											{% for galerie in article.galeries %}
												{% if loop.first %}
													<img src="{{ asset('img/galerie/' ~ galerie.img) }}" alt="#" class="article__thumbnail">
												{% endif %}
											{% endfor %}
										{% else %}
											<div class="article__thumbnail article__thumbnail--empty"></div>
										{% endif %}
										<figcaption class="article__title">
											{{ article.titre }}
										</figcaption>
									</figure>
								</a>
							{% endif %}
						{% endfor %}
					{% endif %}
				</div>
			</div>

		</main>
	</div>

	<script src="{{asset('js/profileGeoloc.js')}}"></script>

{% endblock %}
