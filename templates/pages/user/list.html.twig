{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block stylesheets %}

	{{ parent() }}

	<link href="{{ asset('css/listUsers/style.css') }}" rel="stylesheet"/>
{% endblock %}


{% block body %}


	<div class="wrapper">

		{% if followers is defined %}

			<h1>Abonnés de
				{{ user.pseudo|capitalize }}</h1>

		{% endif %}

		{% if following is defined %}

			<h1>Abonnements de
				{{ user.pseudo|capitalize }}</h1>

		{% endif %}

		{% for membre in membres %}
			<div class="flex">
				<div class="user">
					<figure class="user__containAvatar"><img class="user__avatar" src="{{ asset('img/avatar/' ~ membre.avatar) }}"/></figure>
					<a class="user__name" href="{{ path('user_show', {id: membre.id}) }}">
						<h5>{{ membre.pseudo }}</h5>
					</a>
				</div>
				<p class="user__description">{{ membre.description }}</p>
			</div>
		{% endfor %}

		{% if membres is empty %}
			{% if followers is defined %}
				<p>{{ user.pseudo|capitalize }}
					n'a pas encore d'abonnés</p>
			{% else %}
				<p>{{ user.pseudo|capitalize }}
					n'a pas encore d'abonnements</p>
			{% endif %}
		{% endif %}

	{% endblock %}
