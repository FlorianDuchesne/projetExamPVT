{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

{% include 'components/lightbox.twig' %}

	<div class="wrapper-whole">
		<figure class="publishStuff">
			<img class="publishStuff__img" src="{{ asset('img/publication.jpg') }}"/>
			<h1 class="publishStuff__h1">Publie ton prochain article !</h1>
		</figure>

		<div class="wrapper-main">

			<div class="wrapper-posts">
				{% for user in users %}
					{% for publication in user.publications %}

					{% include 'components/publication.twig' %}

						{% endfor %}
					{% endfor %}
				</div>

				{% include 'layouts/asideHome.twig' %}
			</div>
		</div>
	{% endblock %}
