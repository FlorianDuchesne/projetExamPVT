<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																																																																																																																																																																																																																																																								           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<script src="https://cdn.ckeditor.com/4.16.1/standard/ckeditor.js"></script>
			<link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
			<link href="{{ asset('css/main.css') }}" rel="stylesheet"/>
			<link
			href="{{ asset('css/dropdownButtons/style.css') }}" rel="stylesheet"/>
		{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}
		{% block javascripts %}
			<script src="https://kit.fontawesome.com/e2a8fec256.js" crossorigin="anonymous"></script>
			<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
			<script src="{{ asset('node_modules/readmore-js/readmore.min.js') }}"></script>
			<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
			<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
		{% endblock %}
	</head>
	<body>

		<header class="navbar-expand-lg d-flex flex-wrap">
			<div id="entete" class=" container-fluid d-flex justify-content-between align-items-center">
				<a href="{{ path('home') }}" class="col-2">
					<img src="{{ asset('img/logo2.png') }}" class="col-12"/>
				</a>
				<a class="btn btn-info m-1" id="searchLittle">
					<i class="fas fa-search"></i>
				</a>
			</form>
			<form action="" method="post" class="col-3" id="searchBig">
				<input class="form-control me-sm-2" placeholder="Search" type="search" name="search"/>
				<button type="submit" class="btn btn-info m-1">
					<i class="fas fa-search"></i>
				</button>
			</form>
			{% if app.user %}
				<a href='{{ path('user_show', {id: app.user.id})}}'>
					<div id='login' class="btn btn-info m-1">
						<i class='fas fa-user m-1'></i>
						<h5>{{ app.user.pseudo|capitalize }}</h5>
					</div>
				</a>
			{% else %}
				<a href='{{ path('app_login')}}'>
					<div id='login' class="btn btn-info m-1">
						<i class='fas fa-user m-1'></i>
						<h5>Mon compte</h5>
					</div>
				</a>
			{% endif %}
			<button onclick="menuBurger()" class="btn btn-info" id="menuBurger">
				<i class="fas fa-bars"></i>
			</button>
		</div>
		<nav class="navbar navbar-expand-lg container-fluid bg-info m-0 justify-content-center" id="myLinks">
			<ul class="navbar-nav d-flex justify-content-between col-11">
				<li class="nav-item">
					<a class="nav-link text-white text-uppercase" href="{{ path('home') }}">Accueil</a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-white text-uppercase" href="{{ path('users') }}">Membres</a>
				</li>
				<li class="nav-item dropdown dropdownHover">
					<a class="nav-link dropdown-toggle text-white text-uppercase" href="{{ path('pays') }}" id="navbarDropdownPays">
						Pays
					</a>
					<div class="dropdown-menu" aria-labelledby="navbarDropdownPays">
						{% for country in countries %}
							<a class="dropdown-item text-info text-uppercase" href="{{ path('pays_show', {id: country.id}) }}">{{ country.libelle }}</a>
						{% endfor %}
					</div>
				</li>
				<li class="nav-item dropdown dropdownHover">
					<a class="nav-link dropdown-toggle text-white text-uppercase" href="{{ path('theme') }}" id="navbarDropdownTheme">
						Thèmes
					</a>
					<div class="dropdown-menu" aria-labelledby="navbarDropdownTheme">
						{% for theme in themes %}
							<a class="dropdown-item text-info text-uppercase" href="{{ path('theme_show', {id: theme.id}) }}">{{ theme.libelle }}</a>
						{% endfor %}
					</div>
				</li>
				<li class="nav-item">
					<a class="nav-link text-white text-uppercase" href="#">Carte</a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-white text-uppercase" href="#">à propos</a>
				</li>
			</ul>
		</nav>
	</body>
</html></header>{% block body %}{% endblock %}</body><script src="{{ asset('js/script.js') }}"></script></html>
