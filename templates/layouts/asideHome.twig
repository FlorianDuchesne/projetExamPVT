		{% endfor %}
	</div>
	<div class="aside aside--bottom">
		<h6 class="aside__h6">Tendances du moment :</h6>
		{% for tendance in tendances %}
			<p class="aside__hashtags">
				<a href="{{ path('indexTag', {id: tendance.id}) }}">#{{ tendance.name }}</a>
			</p>
		{% endfor %}
	</div>
</div>
