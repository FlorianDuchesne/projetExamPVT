<div class="wrapperAside">
	<div class="aside">
		<h6 class="aside__h6">DÃ©couvrez ces profils :</h6>
		{% for suggestion in suggestions %}
			<a href="{{ path('user_show', {id: suggestion.id}) }}">
				<div class="aside__user">
					<figure><img class="aside__user__avatar" src="{{ asset('img/avatar/' ~ suggestion.avatar) }}"/></figure>
					<h5 class="aside__user__name">{{suggestion.pseudo}}</h5>
				</div>
